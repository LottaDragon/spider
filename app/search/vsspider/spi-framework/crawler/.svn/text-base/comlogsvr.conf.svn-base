
#日志文件目录
log_dir : ./log
#日志文件名
log_file : comlogsvr.
#日志回滚大小(M)
log_size : 2048
#日志级别
log_level : 0x04
#limit 日志间隔
daemon_sleeptime : 5000
#epoll wait的时间设置(ms)
comlogsvr_epoll_timeoout : 5000
#连接超时设置(秒)
comlogsvr_conn_timeout : 2
#读超时设置(秒)
comlogsvr_read_timeout : 2
#写超时设置(秒)
comlogsvr_write_timeout : 2
#sock池句柄数
comlogsvr_sock_num : 1000
#写文件缓冲队列长度
comlogsvr_queue_len : 500
#监听端口
comlogsvr_listen_port : 9898
#工作线程数
comlogsvr_thread_num : 1
#当日志大小达到max_buff_size时进行压缩和写文件(单位:K)
max_buff_size : 128
#网络接收可开辟的最大buff大小(单位:K)
max_rev_size : 1024
#网络接收可使用的总内存大小，超过限制会拒绝服务(单位:M)
max_memory_size : 2048
#存放文件句柄的hash表的大小
fd_hash_max : 8192
#文件句柄关闭超时时间(单位:秒)
active_timeout : 600
#文件缓存写磁盘超时时间(单位:秒)
flush_timeout : 60
#认证IP文件路径
auth_file : ./conf/comlogsvrauthip  

#工作模式，0表示本地硬盘，1表示网络
work_mode : 0

#网络工作模式下，需要设置如下变量
#服务IP地址
svr_addr_ip : 127.0.0.1
#服务端口地址
svr_port : 20000
#服务协议
svr_protocol : ul_pack

#本地硬盘模式下，需要设置如下变量
#日志存储的目录
log_store_dir : ./data/comlogsvr
#单个文件的最大长度(单位:M)
max_file_size : 1000
#0不压缩, 1使用zlib压缩, 2lzo压缩, 压缩比小但速度快
default_compress : 0 
